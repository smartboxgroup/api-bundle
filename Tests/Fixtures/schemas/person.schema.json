{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://example.com/schemas/person.schema.json",
  "title": "Person",
  "description": "Person definition",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "isKey": true,
      "description": "Main identifier for a person"
    },
    "name": {
      "type": "string",
      "description": "The first name of the person"
    },
    "surname": {
      "type": "string",
      "description": "The surname of the person"
    },
    "birthDate": {
      "type": "string",
      "description": "The date of birthday in ISO format"
    },
    "password": {
      "type": "string",
      "description": "The password of the user"
    },
    "credit": {
      "type": "number",
      "description": "The amount of credit available for this user"
    }
  },
  "required": [
    "id"
  ],
  "views": {
    "public": ["id", "name", "surname"],
    "credit": ["id", "credit"],
    "full": ["id", "name", "surname", "birthDate", "password", "credit"]
  }
}
